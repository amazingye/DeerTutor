<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:stretchColumns="1"
    tools:context="com.ye.deertutor.Activities.RegisterActivity">

    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:text="用户名" />

        <EditText
            android:id="@+id/nicknameedit"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:text="密码"/>

        <EditText
            android:id="@+id/pswdedit"
            android:layout_height="wrap_content" />

    </TableRow>

    <!--<TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:text="邮箱"/>

        <EditText
            android:layout_height="wrap_content"
            android:id="@+id/emailedit" />

    </TableRow>-->

    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:text="电话"/>

        <EditText
            android:layout_height="wrap_content"
            android:id="@+id/teledit" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:text="验证码"/>

        <EditText
            android:layout_height="wrap_content"
            android:id="@+id/vercodeedit" />

    </TableRow>

    <TableRow>


        <TextView
            android:layout_height="wrap_content"
            android:text="请问您是？" />

        <RadioGroup
            android:id="@+id/typerg"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/teacherrb"
                android:text="教师"/>
            <RadioButton
                android:id="@+id/parentrb"
                android:text="家长"/>

        </RadioGroup>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/getvercodebutton"
            android:text="点击获取验证码"
            android:layout_span="2"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/registerbutton"
            android:text="注册"
            android:layout_span="2"
            android:visibility="invisible"/>
    </TableRow>

</TableLayout>
